{% extends 'base.html.twig' %}

{% block title %}Material{% endblock %}

{% block body %}
    <h1>Material</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ material.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ material.name }}</td>
            </tr>
            <tr>
                <th>BuyedAt</th>
                <td>{{ material.buyedAt ? material.buyedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ material.model }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ material.number }}</td>
            </tr>
            <tr>
                <th>Year1</th>
                <td>{{ material.year1 ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Year2</th>
                <td>{{ material.year2 ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ material.createdAt ? material.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('material_index') }}">back to list</a>

    <a href="{{ path('material_edit', {'id': material.id}) }}">edit</a>

    {{ include('material/_delete_form.html.twig') }}
{% endblock %}
